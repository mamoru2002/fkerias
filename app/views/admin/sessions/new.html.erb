<div class="flex justify-center items-center min-h-screen w-full p-4">
  <div class="w-full max-w-md bg-white rounded-lg shadow-xl p-6">
    <%= form_with url: admin_login_path, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div class="flex justify-end">
        <%= f.submit "Login", class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700" %>
      </div>
    <% end %>
  </div>
</div>